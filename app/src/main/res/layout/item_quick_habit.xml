<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.JustMe.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHabitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_xs"
                android:textAppearance="@style/TextAppearance.JustMe.Body1"
                android:textStyle="bold"
                tools:text="Drink Water" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.JustMe.Body2"
                tools:text="2/8 cups" />

        </LinearLayout>

        <!-- Single button for checkbox habits -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuickLog"
            style="@style/Widget.JustMe.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            tools:text="Mark Done" />

        <!-- Separate buttons for counter/timer habits -->
        <LinearLayout
            android:id="@+id/layoutCounterButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDecrease"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="?attr/colorError"
                android:textColor="?attr/colorOnError"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIncrease"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
