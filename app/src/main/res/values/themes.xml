<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme -->
    <style name="Base.Theme.JustMe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorOnPrimary">@color/on_primary_light</item>
        <item name="colorPrimaryContainer">@color/primary_container_light</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_light</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/on_secondary_light</item>
        <item name="colorSecondaryContainer">@color/secondary_container_light</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_light</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <item name="colorSurfaceVariant">@color/surface_variant_light</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_light</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_light</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.JustMe.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.JustMe.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.JustMe.LargeComponent</item>
    </style>

    <style name="Theme.JustMe" parent="Base.Theme.JustMe" />

    <!-- Typography Styles -->
    <style name="TextAppearance.JustMe.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.JustMe.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.JustMe.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearance.JustMe.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.JustMe.SmallComponent" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.JustMe.MediumComponent" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_corner_radius</item>
    </style>

    <style name="ShapeAppearance.JustMe.LargeComponent" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="Widget.JustMe.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_light</item>
        <item name="android:textColor">@color/on_primary_light</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="Widget.JustMe.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.JustMe.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface_light</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.JustMe.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/coffee_accent</item>
        <item name="tint">@color/on_primary_light</item>
        <item name="elevation">6dp</item>
    </style>
</resources>
